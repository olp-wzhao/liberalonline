<%= simple_form_for @document, :html => {multipart: true} do |f| %>
  <%= f.error_notification %>

    <%= f.input :headline %>
    <%= f.input :subtitle %>
    <%= f.input :introduction %>
    <%= f.input :body, as: :text, :input_html => { :class => "tinymce", :rows => 40, :cols => 80 } %>
    <%= f.input :author %>
    <%= f.input :reference_url %>
    <%= f.input :reference_name %>
    <%= f.input :attached_photo_ids %>
    <%= f.input :attached_video_ids %>
    <%= f.input :language, collection: ["English", "French"], priority: [ "English" ] %>
    <%= f.input :helpfulness_rating, collection: 1..10 %>
    <%= f.input :applicability_rating, collection: 1..10 %>
    <%= f.input :allow_comment, as: :boolean %>
    <%= f.input :published, as: :boolean %>
    <%= f.input :copy_protect, as: :boolean %>
    <%= f.input :display_date, as: :date %>
    <%= f.input :expiry_date, as: :date %>
    
    <%= f.input :publish_on_olp, as: :boolean %>
    <%= f.input :publish_on_mpp, as: :boolean %>
    <%= f.input :publish_on_pla, as: :boolean %>
    <%= f.input :partisan, as: :boolean %>
    <%= f.input :author_photo %>
    <%= f.input :is_draft, as: :boolean %>
    <%= f.input :riding_id, collection: Riding.all, as: :select%>
    <%= f.input :web_site %>
    <%= f.input :doc_type, collection: DocumentType.all, as: :select %>
    <%= f.input :category_id %>
    <%= f.input :customized_category_id %>
    <%= f.input :issue_id %>

    <p>Document Image</p>
    <%= f.input :image_name %>
    <%= f.input :image, as: :file, label: 'Upload Attachment' %>
    <%= f.hidden_field :image_cache %>
    </br>
    <%= f.button :submit %>
<% end %>
<%= tinymce %>