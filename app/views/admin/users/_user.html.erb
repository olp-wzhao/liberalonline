<div id="role-options-<%= @user.id %>">
  <%= simple_form_for @user, :url => admin_user_path(@user), :html => {:method => :put, :class => 'form-horizontal' }, remote: true do |f| %>
      <div class="modal-header">
        <h3>Change Role</h3>
      </div>
      <div class="modal-body">
        <%= f.input :roles, :collection => AppConfig.roles, :as => :check_boxes, :label_method => lambda {|r| r.titleize}, :label => false, :item_wrapper_class => 'inline', checked: @user.roles %>
      </div>
      <div class="modal-footer">
        <%= f.submit 'Change Role', :class => 'btn' %>
      </div>
  <% end %>
</div>