
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr id="<%= user.id %>">
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_date %></td>
          <td><%= user.roles.join(', ').titleize unless user.roles.first.nil? %></td>
          <td>
            <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini btn-primary" type="button">Change role</a>
            <%= render partial: user %>
          </td>
          <td><%= link_to("Delete user", admin_user_path(user), remote: true, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-mini btn-danger') unless user == current_user %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
<%#= paginate @users %>