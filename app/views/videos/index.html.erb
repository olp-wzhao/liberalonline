<% content_for :header do %>
<%= stylesheet_link_tag "/stylesheets/multimedia_" + @language.downcase + ".css" %>
<%= stylesheet_link_tag "jQuery/fancybox/jquery.fancybox-1.3.0.css" %>
<%= javascript_include_tag "jQuery/jquery-1.4.1.min", "jQuery/fancybox/jquery.mousewheel-3.0.2.pack", "jQuery/fancybox/jquery.fancybox-1.3.0.pack" %>
<script type="text/javascript">
	$(document).ready(function() {
	  $("a[rel=featured_video]").fancybox({
			'transitionIn'      : 'none',
			'transitionOut'     : 'none',
			'titlePosition'     : 'over',
			'titleFormat'       : function(title, currentArray, currentIndex, currentOpts) {
				return '<span id="fancybox-title-over">' + title + '</span>';
			}
		});
	});
</script>
<% end %>

<% content_for :enews_subscribe do %>
<% end %>



<div id="inside_column_main">
<div id="storywrapperlarge">
    <% if @videos != nil && @videos.length > 0 %>
		<div class="sectionheaderbig">	
			<h1>Provincially</h1>
			<h2>Recently added to OntarioLiberal.ca</h2>
		</div>	
		<% @videos.each do |video| %>
			<div id="vidholder<%= video.id.to_s %>" class="videocontainer">
				<div class="videoinfo">			
					<p>&nbsp;</p>
					<div class="vidthumb" style="background-image:url(http://i4.ytimg.com/vi/<%= video.video_uri %>/default.jpg)">
						<a href=<%= "/videos/" + video.id.to_s %>>
							<img src="/stylesheets/img/play.png" border="0" alt="" />
						</a>
					</div>
					<div class="listh1">&nbsp;<%= raw(video.title) %></div>
					<p>&nbsp;<%= raw(video.summary) %></p>
                	<div class="date" style="padding-top:3px;"><span class="posted">Posted:&nbsp;</span><%= video.created_date.strftime('%B %d, %Y %I:%M %p') %></div>
		        </div>
			</div>
			<div class="clearer"></div>
		<% end %>
	<% else %>
		<div style="display:none;"><br /><span class="headline">Nothing from <%= raw(@riding_name) %> just yet.</span><br /></div>
	<% end %>	
</div>
</div>

<div id="inside_column_three">
</div>
