// I've got to add the offset of main to the height of main 
// and then subtract the height of col-4
// that tells me how far col-4 can travel before bumping into
// the footer

$(document).ready(function() {

var footerisat = $('.main').offset().top+$('.main').height()-$('.col-4').height();
$('.col-4').scrollToFixed({ marginTop: 0, limit: footerisat });

