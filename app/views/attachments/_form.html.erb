<%= simple_form_for @attachment, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>
    <%= f.input :icon_uri %>
    <%= f.input :language %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :place %>
    <%= f.input :database_name %>
    <%= f.input :file_location %>
    <%= f.input :attachment_type %>
    <%= f.input :published, as: :boolean %>
    <%= f.input :web_site %>
    <%= f.input :pdf, as: :file, label: 'Upload Attachment'  %>
    <%= f.hidden_field :pdf_cache %>
    </br>
    <%= f.button :submit %>
<% end %>