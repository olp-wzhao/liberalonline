<h3><%= if @language == 'FR' then 'Dites-nous ce que vous en pensez' else 'We\'d love to hear from you!' end %></h3>

<%= form_for @contact, :url => contact_path do |f| %>

  <p><%= if @language == 'FR' then 'Courriel' else 'Email' end %>:<p/>
  <%= f.text_field  :email, :required => true, :autofocus => true, :class => 'submittable' %>

  <p><%= if @language == 'FR' then 'PrÃ©nom' else 'First Name' end %>:<p/>
  <%= f.text_field  :first_name, :size => 50, :class=> "rounded" %>

  <p><%= if @language == 'FR' then 'Nom de famille' else 'Last Name' end %>:<p/>
  <%= f.text_field  :last_name, :size => 50, :class=> "rounded" %>

  <p><%= if @language == 'FR' then 'Postal Code' else 'Postal Code' end %>:<p/>
  <%= f.text_field  :postal_code, :size => 10, :class=> "rounded" %>

  <p><%= if @language == 'FR' then 'Phone' else 'Phone' end %>:<p/>
  <%= f.text_field :phone_number, :size => 20,  :class=> "rounded" %>

  <p>Message</p>
  <%= f.text_area :body, :rows => 10, :cols => 50, :class=> "rounded" %>

  <%= f.submit 'Send' %>

  <% @contact.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>
<% end %>