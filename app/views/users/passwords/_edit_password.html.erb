<h2>Change your password</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put , class: 'form-vertical' }, remote: true) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.input :password, required: true, placeholder: 'Password', autofocus: true, label: false %><span id='strength'></span>
    <%= f.input :password_confirmation, required: true, placeholder: 'Repeat Password', label: false %>
    <%= f.button :submit, 'Change my password', class: 'btn-primary' %>
<% end %>
<%= render 'users/shared/links' %>
<% javascript_include_tag 'jesse.password' %>
<script>
    var passwordValidation = new Application.PasswordAuthorization();
    passwordValidation.setup();
</script>
